# ~/.config/yazi/yazi.toml

[opener]
play = [
  { run = 'vlc "$@"', orphan = true, for = "unix" },
  { run = '$EDITOR "$@"', block = true, for = "unix" },
]

image = [
  { run = 'feh "$@"', orphan = true, for = "unix" },
]

[open]
rules = [
  { mime = "video/*", use = "play" },
  { mime = "image/*", use = "image" },
]

[manager]
show_hidden = true
sort_dir_first = true
show_symlink = true

[preview]
max_width = 120
max_height = 60
tab_size = 4

[theme]
# Tokyo Night Storm vibes ðŸŒŒ
background = "#1a1b26"
foreground = "#c0caf5"
cursor     = "#7aa2f7"

# Selection highlight
selection_fg = "#1a1b26"
selection_bg = "#7dcfff"

# Status bar
status_fg = "#c0caf5"
status_bg = "#24283b"

# Borders
border = "#414868"

# File type colors
directory  = "#7aa2f7"  # Blue
executable = "#9ece6a"  # Green
symlink    = "#bb9af7"  # Purple
socket     = "#ff9e64"  # Orange
block      = "#e0af68"  # Yellow
char       = "#2ac3de"  # Cyan
fifo       = "#f7768e"  # Red

# Extra accents
marked     = "#ff007c"
hidden     = "#565f89"
error      = "#f7768e"
info       = "#7dcfff"
warning    = "#e0af68"

[help]
show = true
keys = [
  { key = "q", desc = "Quit" },
  { key = "j/k", desc = "Down/Up" },
  { key = "h/l", desc = "Parent/Enter" },
  { key = "<Space>", desc = "Select" },
  { key = "o", desc = "Open" },
  { key = "yy", desc = "Yank" },
  { key = "dd", desc = "Cut" },
  { key = "p", desc = "Paste" },
  { key = "?", desc = "Help" },
]

